{{! Đặt tiêu đề cho trang }}
{{#> layout title="Trang Chủ"}}
    <form action="/login" method="POST" class="p-4 border rounded shadow bg-light">
        <h3 class="text-center mb-4">Đăng nhập</h3>

        <!-- Email -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email..." required>
        </div>

        <!-- Mật khẩu -->
        <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu..." required>
        </div>

        <!-- Ghi nhớ tài khoản -->
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
            <label class="form-check-label" for="rememberMe">Ghi nhớ tôi</label>
        </div>

        <!-- Nút đăng nhập -->
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

        <!-- Đăng ký & Quên mật khẩu -->
        <div class="text-center mt-3">
            <a href="/register" class="text-decoration-none">Đăng ký</a> |
            <a href="/forgot-password" class="text-decoration-none">Quên mật khẩu?</a>
        </div>
    </form>
    <form class="d-flex" role="search" action="/search" method="GET">
        <input class="form-control me-2" type="search" name="q" placeholder="Nhập từ khóa..." aria-label="Search">
        <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
    </form>
{{/layout}}
